<div class="container">
    <div class="ajustes container">
        <h1>Carrito</h1>
        <table class="table table-bordered">
            <thead class="encabezado" id={{cart}}>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Titulo</th>             
                    <th scope="col">Categoria</th>
                    <th scope="col">Precio ($)</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Total($)</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each productos}}
                    <tr key={{this.product._id}}>
                        <td>{{this.product._id}}</td>
                        <td>{{this.product.title}}</td>
                        <td>{{this.product.category}}</td>
                        <td id=p{{this.product._id}} class="price">{{this.product.price}}</td>
                        <td id=q{{this.product._id}} class="quantity">{{this.quantity}}</td>
                        <td id={{this.product._id}} class="totalPrice"></td>
                        <td><button id={{this.product._id}} class="botonEliminar">üóëÔ∏è</button></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <button id="purchase" class="btn btn-outline-success" >Finalizar Compra</button>
    </div>
    
</div>



<script src="/js/purchase.js"></script>
<script src="/js/cart.js"></script>